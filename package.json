{
  "name": "--packagename--",
  "version": "0.0.0-development",
  "author": "--authorname-- <--authoremail-->",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "main": "index.js",
  "files": [
    "src",
    "dist",
    "index.js"
  ],
  "scripts": {
    "lint": "eslint src/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test  -- --coverage --no-cache",
    "build": "rm -rf dist && babel src -d dist --source-maps",
    "cm": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "precommit": "lint-staged",
    "init": "semantic-release-cli setup"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "lint-staged": {
    "{src}/**/*.js": [
      "prettier --write --no-semi --single-quote",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "commitizen": "^3.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^4.0.6",
    "jest": "^22.0.0",
    "lint-staged": "^7.0.0",
    "prettier": "^1.7.4",
    "semantic-release-cli": "^4.0.0",
    "semantic-release": "^15.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jlopezxs/node-package-starter"
  },
  "bugs": {
    "url": "https://github.com/jlopezxs/node-package-starter/issues"
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
